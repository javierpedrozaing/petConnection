@page "/pets";

<h3>Paises</h3>

<div class="mb-3">
    <a class="btn btn-primary" href="/pets/create">Crear nueva mascota</a>
</div>

<div class="d-flex align-items-center justify-content-between">
    <AuthorizeView>
        <Authorized>
            @if (counter > 0)
            {
                <a href="/adoptions" class="btn btn-primary"><i class="bi bi-cart-fill" /> Ver adopciones (@counter)</a>
            }
        </Authorized>
    </AuthorizeView>
</div>

<GenericList MyList="Pets">
    <Body>
        <DropDownRecords UpdateListAsync="HandlePageSizeChanged" />

        <Pagination CurrentPage="currentPage"
                    TotalPages="totalPages"
                    SelectedPage="SelectedPageAsync" />

        <Filter TModel="Pet" ApplyFilterAsync="ApplyFilterAsync" CleanFilterAsync="CleanFilterAsync" />

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Especie</th>
                    <th>Raza</th>
                    <th>Edad</th>
                    <th>Género</th>
                    <th>Color</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pet in Pets!)
                {
                    <tr>
                        <td>@pet.Name</td>
                        <td>@pet.Specie</td>
                        <td>@pet.Race</td>
                        <td>@pet.Age</td>
                        <td>@pet.Gender</td>
                        <td>@pet.Color</td>
                        <td>
                            <a href="/pets/edit/@pet.Id" class="btn btn-sm btn-warning">Editar</a>
                            <a href="/pets/details/@pet.Id" class="btn btn-info btn-sm">Detalless</a>
                            <button @onclick="@(() => DeleteAsync(pet))" class="btn btn-danger">Borrar</button>
                            <button @onclick="@(() => AddAdoptionAsync(pet.Id))" class="btn btn-success">Adoptar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>